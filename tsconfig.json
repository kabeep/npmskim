{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "lib": [
            "ES2022"
        ],
        "module": "ESNext",
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "moduleResolution": "bundler",
        "useDefineForClassFields": true,
        "allowImportingTsExtensions": true
    },
    "include": [
        "src",
        "bin",
        "tests"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
